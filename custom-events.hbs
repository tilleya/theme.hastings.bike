<!DOCTYPE html>
<html lang="{{@site.locale}}"{{#match @custom.color_scheme "Dark"}} class="dark-mode"{{/match}}{{#match @custom.color_scheme "Sepia"}} class="sepia-mode"{{/match}}{{#match @custom.color_scheme "Auto: Light/Dark"}} class="auto-dark-mode"{{/match}}{{#match @custom.color_scheme "Auto: Sepia/Dark"}} class="sepia-mode auto-dark-mode"{{/match}}>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{meta_title page=(t "meta-page")}}</title>
    <meta name="HandheldFriendly" content="True">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>services/google_fonts}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
    {{{block "fonts_css"}}}
    <script>
    /* getContrast.js
    ––––––––––––––––––––––––––––––––––––––––––––––––––––
    Website : vanillajstoolkit.com/helpers/getcontrast/
    Authors : Chris Ferdinandi & Brian Suda
    License : MIT
    –––––––––––––––––––––––––––––––––––––––––––––––––––– */
    function getContrast(t){"use strict";return"#"===t.slice(0,1)&&(t=t.slice(1)),3===t.length&&(t=t.split("").map(function(t){return t+t}).join("")),(299*parseInt(t.substr(0,2),16)+587*parseInt(t.substr(2,2),16)+114*parseInt(t.substr(4,2),16))/1000>=128?"no-white-text":"is-white-text"}{{#contentFor "get_contrast_js"}}<script>!function(){"use strict";const t=document.body,o=getComputedStyle(t).getPropertyValue("--ghost-accent-color").trim();o&&t.classList.add(getContrast(o))}();</script>{{/contentFor}}
    </script>
    {{ghost_head}}
  </head>
  <body class="{{body_class}}">
    {{{block "get_contrast_js"}}}
    <div class="global-wrap">
      {{>images/background_cover custom_cover=@site.cover_image}}
      <div class="global-content">
        {{>header}}
        <main class="global-main">
          {{!-- Begin Events List Section --}}
          {{#get "posts" filter="tag:events" include="tags,authors" limit="all"}}
            <section class="events-list">
              <h2 class="events-title">Upcoming Events</h2>
              <ul class="events-items">
                {{#foreach posts}}
                  <li class="event-item">
                    <a href="{{url}}" class="event-link">
                      <h3 class="event-title">{{title}}</h3>
                    </a>
                    <time datetime="{{date format="YYYY-MM-DD"}}" class="event-date">
                      {{date format="MMM DD, YYYY"}}
                    </time>
                    <p class="event-excerpt">{{excerpt}}</p>
                  </li>
                {{/foreach}}
              </ul>
            </section>
          {{/get}}

          <style>
            .events-list {
              max-width: 800px;
              margin: 0 auto;
              padding: 1rem;
            }
            .events-title {
              font-size: 1.8rem;
              margin-bottom: 1rem;
              text-align: center;
            }
            .events-items {
              list-style: none;
              padding: 0;
              margin: 0;
            }
            .event-item {
              border-bottom: 1px solid #ccc;
              padding: 1rem 0;
            }
            .event-link {
              text-decoration: none;
              color: inherit;
            }
            .event-title {
              font-size: 1.4rem;
              margin: 0 0 0.5rem;
            }
            .event-date {
              font-size: 0.9rem;
              color: #666;
              margin-bottom: 0.5rem;
              display: block;
            }
            .event-excerpt {
              font-size: 1rem;
              margin: 0;
            }
            /* Responsive adjustments */
            @media (min-width: 600px) {
              .event-item {
                display: flex;
                flex-direction: column;
              }
            }
          </style>
          {{!-- End Events List Section --}}

          {{{body}}}
        </main>
        {{>footer}}
      </div>
    </div>
    {{>members/notifications}}
    {{>search is_search_core=true}}
    <script src="{{asset "js/global.js"}}"></script>
    {{#if pagination.pages}}
      <script src="{{asset "js/index.js"}}"></script>
    {{/if}}
    {{#is "post,page"}}
      <script src="{{asset "js/post.js"}}"></script>
    {{/is}}
    {{{block "script_js"}}}
    {{ghost_foot}}
  </body>
</html>