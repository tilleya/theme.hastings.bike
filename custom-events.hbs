<!DOCTYPE html>
<html lang="{{@site.locale}}"{{#match @custom.color_scheme "Dark"}} class="dark-mode"{{/match}}{{#match @custom.color_scheme "Sepia"}} class="sepia-mode"{{/match}}{{#match @custom.color_scheme "Auto: Light/Dark"}} class="auto-dark-mode"{{/match}}{{#match @custom.color_scheme "Auto: Sepia/Dark"}} class="sepia-mode auto-dark-mode"{{/match}}>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{meta_title page=(t "meta-page")}}</title>
    <meta name="HandheldFriendly" content="True">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>services/google_fonts}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
    {{{block "fonts_css"}}}
    <script>
    /* getContrast.js
    ––––––––––––––––––––––––––––––––––––––––––––––––––––
    Website : vanillajstoolkit.com/helpers/getcontrast/
    Authors : Chris Ferdinandi & Brian Suda
    License : MIT
    –––––––––––––––––––––––––––––––––––––––––––––––––––– */
    function getContrast(t){"use strict";return"#"===t.slice(0,1)&&(t=t.slice(1)),3===t.length&&(t=t.split("").map(function(t){return t+t}).join("")),(299*parseInt(t.substr(0,2),16)+587*parseInt(t.substr(2,2),16)+114*parseInt(t.substr(4,2),16))/1000>=128?"no-white-text":"is-white-text"}{{#contentFor "get_contrast_js"}}<script>!function(){"use strict";const t=document.body,o=getComputedStyle(t).getPropertyValue("--ghost-accent-color").trim();o&&t.classList.add(getContrast(o))}();</script>{{/contentFor}}
    </script>
    {{ghost_head}}
  </head>
  <body class="{{body_class}}">
    {{{block "get_contrast_js"}}}
    <div class="global-wrap">
      {{>images/background_cover custom_cover=@site.cover_image}}
      <div class="global-content">
        {{>header}}
        <main class="global-main">
          {{!-- Begin Events List Section --}}
          {{#get "posts" filter="tag:event" include="tags,authors" limit="all"}}
            <section class="events-list">
              <h1 class="events-title">{{title}}</h1>
              <ul class="events-items">
                {{#foreach posts}}
                  <li class="event-item">
                    <a href="{{url}}" class="event-link">
                      <h2 class="event-title">{{title}}</h2>
                    </a>
                    <h3 class="event-excerpt">{{excerpt}}</h3>
                  </li>
                {{/foreach}}
              </ul>
            </section>
          {{/get}}

         <style>
  /* Container for the events list with optimal text width */
  .events-list {
    max-width: min(800px, 90vw);  /* Caps at 800px but uses 90% of the viewport on smaller screens */
    margin: 0 auto;
    padding: 1rem;
  }

  /* Events title with centered alignment and fluid typography */
  .events-title {
    font-size: clamp(1.8rem, 4vw, 2.4rem);  /* Fluid size between 1.8rem and 2.4rem */
    margin-bottom: 1rem;
    text-align: center;
  }

  /* Reset list styling */
  .events-items {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  /* Each event item features clear spacing and a visual divider */
  .event-item {
    border-bottom: 1px solid #ccc;
    padding: 1rem 0;
  }

  /* Links carry the event information without extra decoration */
  .event-link {
    text-decoration: none;
    color: inherit;
  }

  /* Event title with crisp typography:
     - Uses subtle negative letter-spacing for clarity.
     - Fluid font sizing with a slightly tighter line height for headings.
  */
  .event-title {
    font-size: clamp(2.2rem, 5vw, 2.6rem);
    margin: 0 0 0.5rem;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  /* Event date rendered in a smaller, muted font */
  .event-date {
    font-size: clamp(1.8rem, 4.5vw, 2rem);
    color: #666;
    margin-bottom: 0.5rem;
    display: block;
  }

  /* Excerpts benefit from comfortable line heights for extended reading */
  .event-excerpt {
    font-size: clamp(0.9rem, 3vw, 1.1rem);
    margin: 0;
    line-height: 1.45;
  }

  /* Responsive adjustments: For screens wider than 600px, the event items are laid out in a flexible column */
  @media (min-width: 600px) {
    .event-item {
      display: flex;
      flex-direction: column;
    }
  }
</style>
          {{!-- End Events List Section --}}

          {{{body}}}
        </main>
        {{>footer}}
      </div>
    </div>
    {{>members/notifications}}
    {{>search is_search_core=true}}
    <script src="{{asset "js/global.js"}}"></script>
    {{#if pagination.pages}}
      <script src="{{asset "js/index.js"}}"></script>
    {{/if}}
    {{#is "post,page"}}
      <script src="{{asset "js/post.js"}}"></script>
    {{/is}}
    {{{block "script_js"}}}
    {{ghost_foot}}
  </body>
</html>