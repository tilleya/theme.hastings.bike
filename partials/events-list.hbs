{{!-- partial: partials/events-list.hbs --}}
{{#get "posts" filter="tag:events" include="tags,authors" limit="all"}}
  <section class="events-list">
    <ul class="events-items">
      {{#foreach posts}}
        <li class="event-item">
          <a href="{{url}}" class="event-link">
            <h3 class="event-title">{{title}}</h3>
          </a>
          <time datetime="{{date format="YYYY-MM-DD"}}" class="event-date">
            {{date format="MMM DD, YYYY"}}
          </time>
          <p class="event-excerpt">{{excerpt}}</p>
        </li>
      {{/foreach}}
    </ul>
  </section>
{{/get}}

