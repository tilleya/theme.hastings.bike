{{#if is_first}}
<picture>
	<source srcset="{{img_url feature_image size="s" format="webp"}} 300w,
					{{img_url feature_image size="m" format="webp"}} 600w,
					{{img_url feature_image size="xl" format="webp"}} 1600w"
	sizes="(max-width:480px) 300px, (max-width:768px) 600px, 1600px"
	type="image/webp">
	<img srcset="{{img_url feature_image size="s"}} 300w, 
				 {{img_url feature_image size="m"}} 600w,
				 {{img_url feature_image size="xl"}} 1600w"
	sizes="(max-width:480px) 300px, (max-width:768px) 600px, 1600px"
	src="{{img_url feature_image size="xl"}}"
	loading="lazy"
	alt="{{title}}">
</picture>
{{else}}
<picture>
	<source srcset="{{img_url feature_image size="s" format="webp"}} 300w,
					{{img_url feature_image size="m" format="webp"}} 600w"
	sizes="(max-width:480px) 300px, 600px"
	type="image/webp">
	<img srcset="{{img_url feature_image size="s"}} 300w, 
				 {{img_url feature_image size="m"}} 600w"
	sizes="(max-width:480px) 300px, 600px"
	src="{{img_url feature_image size="m"}}"
	loading="lazy"
	alt="{{title}}">
</picture>
{{/if}}